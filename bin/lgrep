#!/usr/bin/perl

my $f = $ARGV[0] ;

open my $fh, "<$f" or die "Could not open file '$f'" ;

# figure out the last numeric auto-numbered equation/theorem/definition
while (<$fh>)
{
   if ( /label\{eqn:(.*?)}/ ||
        /boxedEquation\{eqn:(.*?)}/ ||
        /makedefinition.*\{dfn:(.*?)}/ ||
        /maketheorem\{thm:(.*?)}/ ||
        /makelemma\{thm:(.*?)}/ )
   {
      my $v = $1 ;
      $v =~ s/.*:// ;
      $v =~ s/[a-z]//g ;
      $v =~ s/[A-Z]//g ;
      $h{$v}++ ;
   }
}

my @a = (sort { $b <=> $a } keys %h) ;
my $n = $a[0] + 20 ;

print "START=$n ~/physicsplay/bin/numberIt.pl $f\n" ;
